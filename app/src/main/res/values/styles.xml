<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="text_input_style" >
        <item name="android:layout_width">@dimen/text_input_width</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
    </style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="progress_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:layout_marginRight">@dimen/small_margin</item>
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:layout_marginTop">@dimen/small_margin</item>
    </style>

    <style name="currency_item_style">
        <item name="android:layout_marginLeft">@dimen/small_margin</item>
        <item name="android:layout_marginBottom">@dimen/small_margin</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
